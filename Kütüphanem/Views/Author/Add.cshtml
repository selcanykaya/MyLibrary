@using Kütüphanem.Models.Author
@model AuthorAddViewModel

<div class="container mt-5 d-flex justify-content-center">
    <div class="p-4 shadow rounded" style="max-width: 500px; width: 100%; background-color: white; color: #222222;">
        <h3 class="text-center mb-4">Kütüphaneye Yeni Bir Yazar Ekleyin</h3>
        <form asp-action="Add" asp-controller="Author" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Yazar Adı</label>
                <input type="text" class="form-control" placeholder="Yazar Adı Giriniz" asp-for="FirstName" />
            </div>
            <div class="mb-3">
                <label class="form-label">Yazar Soyadı</label>
                <input type="text" class="form-control" placeholder="Yazar Soyadı Giriniz" asp-for="LastName" />
            </div>
            <div class="mb-3">
                <label class="form-label">Yayın Tarihi</label>
                <input type="date" class="form-control" asp-for="DateOfBirth" />
            </div>
            <div class="mb-3">
                <label class="form-label">Yazar Açıklaması</label>
                <textarea class="form-control" rows="3" placeholder="Yazar Hakkında Kısa Bir Açıklama Giriniz" asp-for="Description"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Yazar Fotoğrafı</label>
                <input asp-for="ImageFile" type="file" accept="image/*" class="form-control" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary px-4 py-2">Yazar Ekle</button>
            </div>
        </form>
    </div>
</div>
<style>

    a {
        text-decoration: none !important;
    }
</style>