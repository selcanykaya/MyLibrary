@using Kütüphanem.Models.Author
@model List<AuthorListViewModel>

<div class="container mt-5">
    <h3 class="text-center mb-4" style="color: #222222;">Yazar Listesi</h3>

    <div class="d-flex justify-content-center">
        <table class="table table-bordered table-hover text-center" style="max-width: 600px;">
            <thead class="table-light">
                <tr>
                    <th style="background-color: olive;">Yazarlar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
						<td style="background-color: e6d8ad;">
                            <a href="/Author/Detail/@book.Id" class="text-dark text-decoration-none fw-medium">
                                @book.FullName
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="/Author/Add" class="btn btn-warning fw-bold">Yazar Ekle</a>
    </div>
</div>

